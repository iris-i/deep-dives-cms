datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
  posts    Post[] @relation("Post_author")
}

model Post {
  id                 String           @id @default(cuid())
  title              String           @default("")
  slug               String           @unique @default("")
  intro              String           @default("")
  publishedDate      DateTime?
  body               String           @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  author             User?            @relation("Post_author", fields: [authorId], references: [id])
  authorId           String?          @map("author")
  status             String?
  categories         Category[]       @relation("Category_posts")
  learningJourneys   LearningJourney? @relation("Post_learningJourneys", fields: [learningJourneysId], references: [id])
  learningJourneysId String?          @map("learningJourneys")

  @@index([authorId])
  @@index([learningJourneysId])
}

model Snippet {
  id          String     @id @default(cuid())
  title       String     @default("")
  slug        String     @default("")
  description String     @default("")
  body        String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  categories  Category[] @relation("Category_snippets")
}

model LearningJourney {
  id          String     @id @default(cuid())
  name        String     @default("")
  description String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  posts       Post[]     @relation("Post_learningJourneys")
  categories  Category[] @relation("Category_learningJourneys")
}

model Category {
  id               String            @id @default(cuid())
  name             String            @default("")
  posts            Post[]            @relation("Category_posts")
  snippets         Snippet[]         @relation("Category_snippets")
  learningJourneys LearningJourney[] @relation("Category_learningJourneys")
}
